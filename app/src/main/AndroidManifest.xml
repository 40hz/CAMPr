<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ucsd.eng.campr">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FirebaseUiActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewMyPets"
            android:label="@string/title_activity_view_my_pets"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListerPetList"
            android:label="@string/title_activity_lister_pet_list" />
        <activity android:name=".SwitchActivity"></activity>
    </application>

</manifest>